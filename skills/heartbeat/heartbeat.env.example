# Heartbeat environment â€” sourced by heartbeat.sh
# Copy to ~/.claude/heartbeat.env and fill in values.
# chmod 600 ~/.claude/heartbeat.env

# Required: Claude Code OAuth token (from `claude setup-token`)
export CLAUDE_CODE_OAUTH_TOKEN="your-oauth-token-here"

# Optional: GitHub machine account token
# If set, gh CLI and git push use this token instead of the repo owner's.
# This enables required human review on PRs (agent can't self-approve).
# Create a fine-grained PAT with: Contents (read/write), Pull requests (read/write), Issues (read).
# See MACHINE_ACCOUNT.md for setup instructions.
export GH_TOKEN="ghp_your-machine-account-token-here"

# Optional: Git identity for the machine account
# If set, commits are attributed to the machine account instead of the repo owner.
export GIT_AUTHOR_NAME="skills-heartbeat[bot]"
export GIT_AUTHOR_EMAIL="your-bot-account@users.noreply.github.com"
export GIT_COMMITTER_NAME="skills-heartbeat[bot]"
export GIT_COMMITTER_EMAIL="your-bot-account@users.noreply.github.com"
